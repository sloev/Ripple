    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/single_activity_frame"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context="sloev.ripple.activites.SingleActivity">

<FrameLayout android:id="@+id/single_activity_container"
     android:layout_width="match_parent"
     android:layout_height="match_parent" >
</FrameLayout>


</android.support.v4.widget.DrawerLayout>