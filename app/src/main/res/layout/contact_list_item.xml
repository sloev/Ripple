<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:id="@+id/list_contact_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_alignParentStart="true"
            android:textSize="25dp"
            android:layout_toLeftOf="@+id/list_contact_checkbox"
            android:layout_toStartOf="@+id/list_contact_checkbox"
            android:layout_alignBottom="@+id/list_contact_checkbox"
            android:layout_alignParentTop="true" />

        <CheckBox
            android:id="@+id/list_contact_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true" />
    </RelativeLayout>

</LinearLayout>